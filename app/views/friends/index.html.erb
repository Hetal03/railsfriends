<% if user_signed_in? %>
<h1>Friend List</h1>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th> Twitter</th>
     
      <th colspan="1"></th>
    </tr>
    </thead>
  <tbody>
  <div id="friends">
    <% @friends.each do |friend| %>
     <% if friend.user == current_user %> 
      <tr>
        <td>
          <%= link_to friend.first_name + ' ' + friend.last_name , friend %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <% friend.user_id %>
       
        <td><%= link_to "Delete",friend, method: :delete, data:{ confirm: "Are you Sure?"}, class:"btn btn-outline-danger btn-sm" %></td>
        <% if false %>
        <% #if friend.user == current_user %> 
         <td><%= link_to "Show", friend %></td>  
        <td><% link_to "Edit", edit_friend_path(friend)%></td>
 
        <% end %>
        <% #else %>
        

        <% #end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
  </table>
  <br>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

  </div>
<% else %>
<h1>This is Friend Application</h1>

<% end %>

